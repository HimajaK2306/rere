<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".HomePageActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remind and Recover"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Button Container (Keeps all buttons centered and fixed) -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnAddMed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Medication"
                android:backgroundTint="#667770"
                android:textColor="#FFFFFF"
                android:elevation="5dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRemoveMed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remove Medication"
                android:backgroundTint="#667770"
                android:textColor="#FFFFFF"
                android:elevation="5dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnSleepTracker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sleep Tracker"
                android:backgroundTint="#889B8A"
                android:textColor="#FFFFFF"
                android:elevation="5dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAppointmentTracker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Appointment Tracker"
                android:backgroundTint="#889B8A"
                android:textColor="#FFFFFF"
                android:elevation="5dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Centered Last Button -->
        <Button
            android:id="@+id/btnTherapy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Therapy"
            android:backgroundTint="#667770"
            android:textColor="#FFFFFF"
            android:elevation="5dp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

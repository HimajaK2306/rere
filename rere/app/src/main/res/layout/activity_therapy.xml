<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TherapyActivity">

    <!-- Custom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp" />

    <!-- Content -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Therapy Session"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etTherapyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Therapy Type (e.g., Physical Therapy)" />

    <EditText
        android:id="@+id/etTherapyTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Session Time (e.g., 4:00 PM)"
        android:inputType="time"/>

    <Button
        android:id="@+id/btnSaveTherapy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Therapy Session"
        android:layout_marginTop="16dp"/>

</LinearLayout>

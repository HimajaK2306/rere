<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FFF8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp">

        <TextView
            android:id="@+id/tvTherapyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Therapy Session"
            android:textColor="#0F3D2E"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/cardContainerTherapy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_green_card"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Therapy"
                android:textColor="#0F3D2E"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your therapy sessions with reminder times."
                android:textColor="#4F6F63"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Therapy Type *"
                android:textColor="#2E4E43"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etTherapyType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/white_green_input"
                android:hint="e.g., Physical Therapy"
                android:textColor="#0F3D2E"
                android:textColorHint="#88A79A"
                android:padding="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session Time *"
                android:textColor="#2E4E43"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etTherapyTime"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_green_input"
                    android:hint="hh:mm AM/PM"
                    android:focusable="false"
                    android:clickable="false"
                    android:padding="14dp"
                    android:textColor="#0F3D2E"
                    android:textColorHint="#88A79A" />

                <Button
                    android:id="@+id/buttonPickTime"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:text="Pick Time"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6BAF92" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSaveTherapy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="22dp"
                android:text="Save Therapy Session"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#6BAF92" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTherapySessionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Therapy Sessions:"
            android:textColor="#2E4E43"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="22dp" />

        <LinearLayout
            android:id="@+id/therapyListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textColor="#6BAF92"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="22dp" />
    </LinearLayout>
</ScrollView>

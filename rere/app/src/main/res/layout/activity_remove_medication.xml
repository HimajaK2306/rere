<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FFF8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp">

        <TextView
            android:id="@+id/tvRemoveTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Medication"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#0F3D2E" />

        <LinearLayout
            android:id="@+id/cardContainerRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_green_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Medication"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#0F3D2E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type the medication name to remove, or use the Remove buttons below."
                android:textSize="13sp"
                android:textColor="#4F6F63"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medication Name"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="#2E4E43" />

            <EditText
                android:id="@+id/editTextRemoveName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/white_green_input"
                android:hint="Enter Medication Name to Remove"
                android:padding="14dp"
                android:textColor="#0F3D2E"
                android:textColorHint="#88A79A" />

            <Button
                android:id="@+id/buttonConfirmRemoval"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:text="Confirm Removal"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#6BAF92" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSavedLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved Medications:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2E4E43"
            android:layout_marginTop="22dp" />

        <LinearLayout
            android:id="@+id/medicationListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonBackHome"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textColor="#6BAF92"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</ScrollView>

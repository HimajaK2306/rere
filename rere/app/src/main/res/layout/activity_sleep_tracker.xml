<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FFF8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_idle_alarm"
                android:tint="#0F3D2E"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00PM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0F3D2E" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSleepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Reminder"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#0F3D2E" />

        <LinearLayout
            android:id="@+id/cardContainerSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_green_card"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bedtime Reminder"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#0F3D2E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set a bedtime and message. You will receive a reminder at that time."
                android:textSize="13sp"
                android:textColor="#4F6F63"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bedtime *"
                android:textSize="14sp"
                android:textColor="#2E4E43"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/editTextBedTime"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_green_input"
                    android:hint="hh:mm AM/PM"
                    android:focusable="false"
                    android:clickable="false"
                    android:padding="14dp"
                    android:textColor="#0F3D2E"
                    android:textColorHint="#88A79A" />

                <Button
                    android:id="@+id/buttonPickTime"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:text="Pick Time"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6BAF92" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Message *"
                android:textSize="14sp"
                android:textColor="#2E4E43"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/white_green_input"
                android:gravity="top|start"
                android:hint="e.g., Time to sleep, put your phone away."
                android:padding="14dp"
                android:textColor="#0F3D2E"
                android:textColorHint="#88A79A"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="22dp"
                android:text="Save Reminder"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#6BAF92" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep Logs:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E4E43"
            android:layout_marginTop="22dp" />

        <LinearLayout
            android:id="@+id/sleepLogContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textColor="#6BAF92"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="22dp" />
    </LinearLayout>
</ScrollView>